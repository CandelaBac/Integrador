{{#if carrito.length }}
    <button class="btn__enviarCarrito" onclick="carritoController.enviarCarrito()"><i class="fas fa-times-circle"></i></button>

    <h3>Carrito</h3>

    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Colores</th>
            <th>Dimensiones</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Acción</th>
        </tr>

        {{#each carrito}}
        <tr>
            <td>{{nombre}}</td>
            <td>{{precio}}</td>
            <td>{{colores}}</td>
            <td>{{dimensiones}}</td>
            <td>
                <img style="display:block; margin: 0 auto;" src="{{imagen}}" width="50" alt="{{nombre}}">
            </td>
            <td>{{cantidad}}</td>
            
            {{#if envio}}
                <td>Si</td>
            {{else}}
                <td>No</td>
            {{/if}}
            
            <td>
                <button onclick="carritoController.borrarProductoCarrito({{id}})"class="btn btn__borrarDelCarrito">Borrar</button>
            </td>
        </tr>
         {{/each}}
    </table>
    <div class="btn btn-carrito">
        <button class="btn btn__vaciarCarrito" onclick="carritoController.btnVaciarCarrito()" >Vaciar carrito</button>
        <button class="btn btn__enviarCarrito" onclick="carritoController.enviarCarrito()">Seguir comprando</button>
    </div>
{{else}}
    <button class="btn btn__cerrarCarrito" onclick="carritoController.btnCerrarCarrito()"><i class="fas fa-times-circle"></i></button>
    <h2>El carrito está vacío</h2>
    <button class="btn btn__irAAgregarCarrito" onclick="carritoController.btnIrAAgregar()">Agregar productos</button>
{{/if}}

